<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <EditText
        android:width="200dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:inputType="phone"
        android:hint="phone number"></EditText>

    <Button
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOCATION and ALARM REQUEST" />

    <Button
        android:id="@+id/sendLocationRequestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_request" />

    <Button
        android:id="@+id/sendAlarmRequestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALARM REQUEST" />


</LinearLayout>

